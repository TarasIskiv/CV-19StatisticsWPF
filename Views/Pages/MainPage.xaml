                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <DockPanel>
                        
                    </DockPanel>
                </StackPanel>


                <StackPanel Grid.Column="1"></StackPanel>
            </Grid>
        </Border>
    </Grid>
